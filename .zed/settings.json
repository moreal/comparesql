{
  "lsp": {
    "deno": {
      "settings": {
        "deno": {
          "enable": true
        }
      }
    }
  },
  "languages": {
    "TypeScript": {
      "formatter": {
        "language_server": {
          "name": "deno"
        }
      },
      "language_servers": ["deno", "!typescript-language-server"]
    },
    "TSX": {
      "formatter": {
        "language_server": {
          "name": "deno"
        }
      },
      "language_servers": ["deno", "!typescript-language-server"]
    },
    "JavaScript": {
      "formatter": {
        "language_server": {
          "name": "deno"
        }
      },
      "language_servers": ["deno", "!typescript-language-server"]
    }
  }
}
